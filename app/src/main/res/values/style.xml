<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBottomSheetDialogTheme2" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/AppModalStyle2</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

    </style>

    <style name="AppModalStyle2" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
        <item name="paddingStart">5dp</item>
        <item name="paddingEnd">5dp</item>
    </style>

    <!--    implemented using material design system-->binding!!.fullScreenImage.setOnClickListener { v: View? ->
            dismiss()
            termConditionListener.onSetEnableTerms(true)
        }
    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_draggable">false</item>
        <item name="behavior_hideable">false</item>
        <item name="behavior_peekHeight">700dp</item>
        <!--        <item name="backgroundTint">@color/transparent</item>-->
        <item name="shapeAppearance">@style/ShapeAppearance.PaperflyGo.LargeComponent</item>
    </style>

    <style name="ModalBottomSheetDialog2" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_draggable">false</item>
        <item name="behavior_hideable">false</item>
        <item name="behavior_peekHeight">2000dp</item>
        <!--        <item name="backgroundTint">@color/transparent</item>-->
        <item name="shapeAppearance">@style/ShapeAppearance.PaperflyGo.LargeComponent</item>
    </style>
    <style name="checkbox">
        <item name="android:background">#0249C0</item>
    </style>

    <style name="smaller_drawable">
        <item name="android:textSize">20sp</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
    </style>

    <style name="ThemeOverlay.PaperflyGo.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>
    <style name="ThemeOverlay.PaperflyGo.BottomSheetDialog.FullScreen" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog2</item>
    </style>

    <style name="DialogTheme">
        <item name="android:colorAccent" >#0249C0</item>
        <item name="android:textSize" >16sp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:listChoiceIndicatorMultiple" >@drawable/custom_checkbox</item>
    </style>


    <!-- used ExposedDropdownMenu / Spinner menu with end icon-->
    <!-- used ExposedDropdownMenu / Spinner menu with end icon-->
    <style name="Widget.PaperflyGo.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/ThemeOverlay.PaperflyGo.ExposedDropdownMenu</item>
        <item name="shapeAppearance">@style/ShapeAppearance.PaperflyGo.SmallComponent</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_arrow_down</item>
        <item name="endIconTint">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.PaperflyGo.ExposedDropdownMenu" parent="">
        <item name="autoCompleteTextViewStyle">@style/Widget.PaperflyGo.AutoCompleteTextView</item>
        <item name="colorControlActivated">@color/black_800</item>
        <item name="colorSurface">@color/colorPrimary</item>
    </style>

    <style name="Widget.PaperflyGo.AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">textMultiLine|text</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:scrollbars">vertical</item>
    </style>


    <style name="ColorSwitchStyle">
        <item name="colorControlActivated">@color/dark_primary</item>
        <item name="colorControlNormal">@color/gray</item>

        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="Widget.PaperflyGo.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--        <item name="shapeAppearance">@style/ShapeAppearance.PaperflyGo.Image.WithOutRounded</item>-->
        <item name="hintTextColor">@color/transparent</item>
        <item name="boxBackgroundColor">@color/color_back_bg</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeErrorColor">@color/transparent</item>
        <item name="boxStrokeColor">@color/transparent</item>
    </style>

    <style name="Widget.PaperflyGo.TextInputEditText" parent="Widget.Design.TextInputEditText">
        <item name="android:textColor">@color/color_title</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textCursorDrawable">@drawable/input_cursor_black</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/input_box_curve</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:drawableTint" tools:ignore="NewApi">@color/data_enable</item>
    </style>

    <style name="Widget.PaperflyGo.TextInputEditText.Spinner" parent="Widget.PaperflyGo.TextInputEditText">
        <item name="android:focusable">false</item>
    </style>


    <style name="Widget.PaperflyGo.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.PaperflyGo.Button.TextButton</item>
        <item name="android:textAppearance">@style/TextAppearance.PaperflyGo.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.PaperflyGo.SmallComponent</item>
        <item name="iconPadding">20dp</item>
        <item name="iconSize">20sp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="Widget.PaperflyGo.Button.TextButton.Menu" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.PaperflyGo.Button.TextButton</item>
        <item name="android:textAppearance">@style/TextAppearance.PaperflyGo.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.PaperflyGo.SmallComponent</item>
        <item name="iconPadding">16dp</item>
        <item name="iconSize">20sp</item>
        <item name="icon">@drawable/ic_arrow_down</item>
        <item name="iconTint">@color/dark_primary</item>
        <item name="iconGravity">end</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dark_primary</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="Widget.PaperflyGo.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.PaperflyGo.Button.OutlinedButton
        </item>
        <item name="android:textAppearance">@style/TextAppearance.PaperflyGo.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.PaperflyGo.SmallComponent</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeColor">?colorPrimary</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="Widget.PaperflyGo.Button.Submit" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.PaperflyGo.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.PaperflyGo.Button.Submit</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:enabled">false</item>
        <item name="iconGravity">textEnd</item>
        <item name="icon">@drawable/ic_forward_icon</item>
        <item name="android:backgroundTint">@color/submit_button_background</item>
        <item name="iconTint">@color/white</item>
    </style>


    <style name="Widget.PaperflyGo.Button.Round.Submit" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.PaperflyGo.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.PaperflyGo.Button.round.Submit</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:enabled">false</item>
        <item name="iconGravity">textEnd</item>
        <item name="icon">@drawable/ic_forward_icon</item>
        <item name="android:backgroundTint">@color/submit_button_background</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Widget.PaperflyGo.Button.Outline.Submit" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.PaperflyGo.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.PaperflyGo.Button.round.Submit</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textColor">@color/dark_primary2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:enabled">false</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconGravity">textEnd</item>
        <item name="icon">@drawable/ic_forward_icon</item>
        <item name="strokeColor">@color/dark_primary2</item>
    </style>

    <style name="ThemeOverlay.PaperflyGo.Button.TextButton" parent="">
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="ThemeOverlay.PaperflyGo.Button.OutlinedButton" parent="">
        <item name="colorPrimary">@color/dark_primary</item>
    </style>

    <style name="Widget.PaperflyGo.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.PaperflyGo.Card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.PaperflyGo.Card</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="ThemeOverlay.PaperflyGo.Card" parent="">
        <!-- <item name="colorPrimary">@color/shrine_pink_100</item>
         <item name="colorSurface">@color/shrine_pink_light</item>
         <item name="colorOnSurface">@color/shrine_pink_900</item>-->
    </style>


    <style name="Widget.PaperflyGo.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="useMaterialThemeColors">false</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:button">@drawable/custom_checkbox</item>
    </style>

    <style name="Widget.PaperflyGo.CheckBox.Default" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:checked">true</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.PaperflyGo.CheckBox</item>
    </style>

    <style name="ThemeOverlay.PaperflyGo.CheckBox" parent="">
        <item name="colorOnSurface">@color/line_default</item>
        <item name="colorSecondary">@color/dark_primary</item>
    </style>


    <style name="IconOnlyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconTint">@color/toggle_button_icon_color</item>
        <item name="iconGravity">textStart</item>
    </style>


    <style name="TooltipTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>